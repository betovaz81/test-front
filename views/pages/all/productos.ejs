<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="breadcrumb-main">
                <h4 class="text-capitalize breadcrumb-title"><%- __('Productos') %></h4>
                <div class="breadcrumb-action justify-content-center flex-wrap">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="las la-home"></i><%- __('Inicio') %></a></li>
                            <!-- <li class="breadcrumb-item"><a href="#">Apps</a></li> -->
                            <li class="breadcrumb-item active" aria-current="page"><%- __('productos') %></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        
        <div class="col-lg-12 mb-30">
            <div class="card">
                <div class="card-header color-dark fw-500">
                    Lista de productos
                </div>
                <div class="card-body p-0">


                    <div class="table4 table5 p-25">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr class="userDatatable-header">
                                        <th>
                                            <div class="userDatatable-title">
                                                Nombre
                                                <div class="d-flex justify-content-between align-items-center w-100">
                                                    <span class="userDatatable-sort">
                                                        <i class="fas fa-caret-down"></i>
                                                    </span>
                                                    
                                                </div>
                                            </div>
                                        </th>
                                        <th>
                                            <div class="userDatatable-title">
                                                Descripcion
                                                
                                            </div>
                                        </th>
                                        <th>
                                            <div class="userDatatable-title">
                                                Existencia
                                                
                                            </div>
                                        </th>
                                        <th>
                                            <div class="userDatatable-title">
                                                Precio
                                                
                                            </div>
                                        </th>
                                        <th>
                                            <div class="userDatatable-title">
                                                Opciones
                                                
                                            </div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if(data.length==0){%>
                                        <tr><td colspan="5">Lo sentimos no hay productos en existencia</td></tr>
                                    <%}%>
                                     <% for(var i=0; i<data.length; i++) {%>
                                        <tr>
                                            <td>
                                                <div class="userDatatable-content">
                                                    <%-data[i].nombre%>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="userDatatable-content">
                                                    <%-data[i].descripcion%>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="userDatatable-content">
                                                    <%-data[i].cantidad%>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="userDatatable-content">
                                                    <%-data[i].precio%>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="userDatatable-content">
                                                  <button 
                                                  class="btn btn-light btn-default btn-squared" 
                                                   onclick="edicion('<%-data[i].id%>','<%-data[i].nombre%>','<%-data[i].descripcion%>','<%-data[i].cantidad%>','<%-data[i].precio%>')"
                                                  >editar</button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% } %>



                                    
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
       
    </div>
</div>

<div class="modal fade new-member" id="new-member" role="dialog" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content  radius-xl">
                <div class="modal-header">
                    <h6 class="modal-title fw-500" id="staticBackdropLabel">Producto</h6>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="svg replaced-svg"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="new-member-modal">
                        <form action="/productos/update" method="post" >
                            <input type="hidden" name="id" id="id" class="form-control" >
                            <div class="form-group mb-20">
                                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Producto">
                            </div>
                            <div class="form-group mb-20">
                                <input type="text" name="descripcion" id="descripcion" class="form-control" placeholder="Descripcion">
                            </div>
                            <div class="form-group mb-20">
                                <input type="number" name="cantidad" id="cantidad" class="form-control" placeholder="Cantidad">
                            </div>
                            <div class="form-group mb-20">
                                <input type="number" name="precio" id="precio" step="0.01" min="0" class="form-control" placeholder="Precio">
                            </div>                            
                            
                            <div class="button-group d-flex pt-25">
                                <button type="submit" class="btn btn-primary btn-default btn-squared text-capitalize">Actualizar
                                </button>
                                <button type="button" class="btn btn-light btn-default btn-squared fw-400 text-capitalize b-light color-light" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    function edicion(id,nombre,descripcion,cantidad,precio){
        console.log(id,nombre,descripcion,cantidad,precio)
        $('#new-member').modal('show');
        $("#id").val(id)
        $("#nombre").val(nombre)
        $("#descripcion").val(descripcion)
        $("#cantidad").val(cantidad)
        $("#precio").val(precio)
    }   
</script>